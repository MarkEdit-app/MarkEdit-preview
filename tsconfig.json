{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2019", "dom"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "importHelpers": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts", "main.ts"],
  "exclude": ["dist", "node_modules"]
}
